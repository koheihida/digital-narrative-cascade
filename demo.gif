<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <!-- 背景 -->
  <rect width="800" height="600" fill="#000000"/>
  
  <!-- アプリケーション画面のフレーム -->
  <rect x="50" y="50" width="700" height="500" fill="#000000" stroke="#333333" stroke-width="2" rx="8"/>
  
  <!-- 操作パネル -->
  <rect x="70" y="70" width="100" height="25" fill="rgba(0,0,0,0.7)" stroke="rgba(255,255,255,0.2)" stroke-width="1" rx="4"/>
  <text x="120" y="85" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="9">岩をクリア</text>
  
  <rect x="180" y="70" width="160" height="25" fill="rgba(0,0,0,0.7)" stroke="rgba(255,255,255,0.2)" stroke-width="1" rx="4"/>
  <text x="260" y="85" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="9">クリックして岩を配置</text>
  
  <!-- 滝の境界線 -->
  <defs>
    <linearGradient id="waterfallGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:rgba(255,255,255,0);stop-opacity:0" />
      <stop offset="20%" style="stop-color:rgba(255,255,255,0.1);stop-opacity:0.3" />
      <stop offset="50%" style="stop-color:rgba(255,255,255,0.1);stop-opacity:0.5" />
      <stop offset="80%" style="stop-color:rgba(255,255,255,0.1);stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:rgba(255,255,255,0);stop-opacity:0" />
    </linearGradient>
  </defs>
  
  <rect x="340" y="100" width="120" height="400" fill="url(#waterfallGradient)" opacity="0.3"/>
  
  <!-- 流れ落ちる文字の列1 -->
  <g font-family="serif" font-size="18" fill="white">
    <text x="350" y="120" opacity="1.0">
      人
      <animateTransform attributeName="transform" type="translate" 
                        values="0,0; 0,380" dur="4s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4s" repeatCount="indefinite"/>
    </text>
    
    <text x="350" y="120" opacity="1.0">
      間
      <animateTransform attributeName="transform" type="translate" 
                        values="0,50; 0,430" dur="4s" repeatCount="indefinite" begin="0.3s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4s" repeatCount="indefinite" begin="0.3s"/>
    </text>
    
    <text x="350" y="120" opacity="1.0">
      失
      <animateTransform attributeName="transform" type="translate" 
                        values="0,100; 0,480" dur="4s" repeatCount="indefinite" begin="0.6s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4s" repeatCount="indefinite" begin="0.6s"/>
    </text>
    
    <text x="350" y="120" opacity="1.0">
      格
      <animateTransform attributeName="transform" type="translate" 
                        values="0,150; 0,530" dur="4s" repeatCount="indefinite" begin="0.9s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4s" repeatCount="indefinite" begin="0.9s"/>
    </text>
  </g>
  
  <!-- 流れ落ちる文字の列2 -->
  <g font-family="serif" font-size="18" fill="white">
    <text x="380" y="120" opacity="1.0">
      私
      <animateTransform attributeName="transform" type="translate" 
                        values="0,0; 0,380" dur="4.2s" repeatCount="indefinite" begin="0.1s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.2s" repeatCount="indefinite" begin="0.1s"/>
    </text>
    
    <text x="380" y="120" opacity="1.0">
      は
      <animateTransform attributeName="transform" type="translate" 
                        values="0,50; 0,430" dur="4.2s" repeatCount="indefinite" begin="0.4s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.2s" repeatCount="indefinite" begin="0.4s"/>
    </text>
    
    <text x="380" y="120" opacity="1.0">
      そ
      <animateTransform attributeName="transform" type="translate" 
                        values="0,100; 0,480" dur="4.2s" repeatCount="indefinite" begin="0.7s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.2s" repeatCount="indefinite" begin="0.7s"/>
    </text>
    
    <text x="380" y="120" opacity="1.0">
      の
      <animateTransform attributeName="transform" type="translate" 
                        values="0,150; 0,530" dur="4.2s" repeatCount="indefinite" begin="1.0s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.2s" repeatCount="indefinite" begin="1.0s"/>
    </text>
  </g>
  
  <!-- 流れ落ちる文字の列3 -->
  <g font-family="serif" font-size="18" fill="white">
    <text x="410" y="120" opacity="1.0">
      男
      <animateTransform attributeName="transform" type="translate" 
                        values="0,0; 0,380" dur="3.8s" repeatCount="indefinite" begin="0.2s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="3.8s" repeatCount="indefinite" begin="0.2s"/>
    </text>
    
    <text x="410" y="120" opacity="1.0">
      の
      <animateTransform attributeName="transform" type="translate" 
                        values="0,50; 0,430" dur="3.8s" repeatCount="indefinite" begin="0.5s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="3.8s" repeatCount="indefinite" begin="0.5s"/>
    </text>
    
    <text x="410" y="120" opacity="1.0">
      写
      <animateTransform attributeName="transform" type="translate" 
                        values="0,100; 0,480" dur="3.8s" repeatCount="indefinite" begin="0.8s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="3.8s" repeatCount="indefinite" begin="0.8s"/>
    </text>
    
    <text x="410" y="120" opacity="1.0">
      真
      <animateTransform attributeName="transform" type="translate" 
                        values="0,150; 0,530" dur="3.8s" repeatCount="indefinite" begin="1.1s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="3.8s" repeatCount="indefinite" begin="1.1s"/>
    </text>
  </g>
  
  <!-- 流れ落ちる文字の列4 -->
  <g font-family="serif" font-size="18" fill="white">
    <text x="440" y="120" opacity="1.0">
      を
      <animateTransform attributeName="transform" type="translate" 
                        values="0,0; 0,380" dur="4.1s" repeatCount="indefinite" begin="0.15s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.1s" repeatCount="indefinite" begin="0.15s"/>
    </text>
    
    <text x="440" y="120" opacity="1.0">
      三
      <animateTransform attributeName="transform" type="translate" 
                        values="0,50; 0,430" dur="4.1s" repeatCount="indefinite" begin="0.45s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.1s" repeatCount="indefinite" begin="0.45s"/>
    </text>
    
    <text x="440" y="120" opacity="1.0">
      葉
      <animateTransform attributeName="transform" type="translate" 
                        values="0,100; 0,480" dur="4.1s" repeatCount="indefinite" begin="0.75s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.1s" repeatCount="indefinite" begin="0.75s"/>
    </text>
    
    <text x="440" y="120" opacity="1.0">
      見
      <animateTransform attributeName="transform" type="translate" 
                        values="0,150; 0,530" dur="4.1s" repeatCount="indefinite" begin="1.05s"/>
      <animate attributeName="opacity" values="0;1;1;0.5;0" dur="4.1s" repeatCount="indefinite" begin="1.05s"/>
    </text>
  </g>
  
  <!-- アニメーションする岩 -->
  <circle cx="300" cy="250" r="0" fill="#000000" stroke="rgba(255,255,255,0.3)" stroke-width="2">
    <animate attributeName="r" values="0;25;25" dur="1s" begin="2s" fill="freeze"/>
    <animate attributeName="stroke-opacity" values="0;0.8;0.3" dur="1s" begin="2s" fill="freeze"/>
  </circle>
  
  <circle cx="500" cy="200" r="0" fill="#000000" stroke="rgba(255,255,255,0.3)" stroke-width="2">
    <animate attributeName="r" values="0;30;30" dur="1s" begin="3s" fill="freeze"/>
    <animate attributeName="stroke-opacity" values="0;0.8;0.3" dur="1s" begin="3s" fill="freeze"/>
  </circle>
  
  <circle cx="390" cy="350" r="0" fill="#000000" stroke="rgba(255,255,255,0.3)" stroke-width="2">
    <animate attributeName="r" values="0;20;20" dur="1s" begin="4s" fill="freeze"/>
    <animate attributeName="stroke-opacity" values="0;0.8;0.3" dur="1s" begin="4s" fill="freeze"/>
  </circle>
  
  <!-- 岩の周りを迂回する文字の軌跡表現 -->
  <g stroke="rgba(255,255,255,0.2)" stroke-width="1" fill="none" opacity="0">
    <path d="M 380 200 Q 360 220 340 240 Q 320 260 300 280 Q 280 300 285 325">
      <animate attributeName="opacity" values="0;0.5;0" dur="2s" begin="5s" repeatCount="indefinite"/>
    </path>
    
    <path d="M 440 180 Q 470 200 490 220 Q 510 240 530 260">
      <animate attributeName="opacity" values="0;0.5;0" dur="2s" begin="5.5s" repeatCount="indefinite"/>
    </path>
  </g>
  
  <!-- マウスクリック効果 -->
  <g opacity="0">
    <circle cx="300" cy="250" r="5" fill="none" stroke="white" stroke-width="2">
      <animate attributeName="r" values="5;30" dur="0.5s" begin="2s"/>
      <animate attributeName="stroke-opacity" values="1;0" dur="0.5s" begin="2s"/>
    </circle>
    <animate attributeName="opacity" values="0;1;0" dur="0.5s" begin="2s"/>
  </g>
  
  <g opacity="0">
    <circle cx="500" cy="200" r="5" fill="none" stroke="white" stroke-width="2">
      <animate attributeName="r" values="5;35" dur="0.5s" begin="3s"/>
      <animate attributeName="stroke-opacity" values="1;0" dur="0.5s" begin="3s"/>
    </circle>
    <animate attributeName="opacity" values="0;1;0" dur="0.5s" begin="3s"/>
  </g>
  
  <g opacity="0">
    <circle cx="390" cy="350" r="5" fill="none" stroke="white" stroke-width="2">
      <animate attributeName="r" values="5;25" dur="0.5s" begin="4s"/>
      <animate attributeName="stroke-opacity" values="1;0" dur="0.5s" begin="4s"/>
    </circle>
    <animate attributeName="opacity" values="0;1;0" dur="0.5s" begin="4s"/>
  </g>
  
  <!-- 説明テキスト（下部） -->
  <g font-family="Arial, sans-serif" font-size="14" fill="white" opacity="0.8">
    <text x="400" y="580" text-anchor="middle">
      太宰治の文学作品から文字が滝のように流れ落ち、クリックで配置した岩に当たると自然に迂回します
    </text>
  </g>
  
  <!-- 技術情報（右下） -->
  <g font-family="Arial, sans-serif" font-size="10" fill="#666666">
    <text x="720" y="570" text-anchor="end">React + Canvas + 物理演算</text>
    <text x="720" y="585" text-anchor="end">Bungomail API連携</text>
  </g>
</svg>